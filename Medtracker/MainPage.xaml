<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Medtracker.MainPage">
    <Shell.TitleView>
        <HorizontalStackLayout VerticalOptions="Center" Spacing="8">
            <Image Source="medtrackerlogo.png" HeightRequest="30" Aspect="AspectFit" VerticalOptions="Center"/>
            <Label Text="MedTracker" FontSize="24" VerticalOptions="Center" FontAttributes="Bold"/>
        </HorizontalStackLayout>
    </Shell.TitleView>
    <ScrollView>
    <VerticalStackLayout Spacing="15" Padding="20">

            <Button Text="Show medications" Clicked="OnShowMedicationClicked"></Button>
            <Button Text="Add medication" Clicked="OnAddMedicationClicked"></Button>
            <Button Text="Remove medications" Clicked="OnRemoveMedicationClicked"></Button>
        <Button Text="Edit medications"></Button>

    </VerticalStackLayout>
    </ScrollView>
</ContentPage>

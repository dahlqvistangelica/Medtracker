<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Medtracker.MainPage">

    <ScrollView>
    <VerticalStackLayout Spacing="15" Padding="20">

            <Button Text="Show medications" Clicked="OnShowMedicationClicked"></Button>
            <Button Text="Add medication" Clicked="OnAddMedicationClicked"></Button>
            <Button Text="Remove medications" Clicked="OnRemoveMedicationClicked"></Button>
        <Button Text="Edit medications"></Button>

    </VerticalStackLayout>
    </ScrollView>
</ContentPage>

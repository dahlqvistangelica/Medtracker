<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Medtracker.Pages.RemoveMedicationPage"
             x:Name="RemovePage"
             Title="Ta bort medicin"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F9FAFB">

    <Grid RowDefinitions="Auto, *">

        <HorizontalStackLayout Grid.Row="0" Spacing="15" Padding="24,20">
            <Border StrokeShape="RoundRectangle 10" BackgroundColor="White" Stroke="#E5E7EB" HeightRequest="40" WidthRequest="40">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Source={x:Reference RemovePage}, Path=BindingContext.GoBackCommand}"/>
                </Border.GestureRecognizers>
                <Label Text="â¬…" VerticalOptions="Center" HorizontalOptions="Center" TextColor="#374151"/>
            </Border>
            <Label Text="Rensa medicinskÃ¥pet" VerticalOptions="Center" FontSize="20" FontAttributes="Bold" TextColor="#1E3A8A"/>
        </HorizontalStackLayout>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding MedicationsList}"
                        Margin="24,0">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="12"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeShape="RoundRectangle 12"
                            Stroke="#fee2e2" 
                            StrokeThickness="1"
                            BackgroundColor="White"
                            Padding="16"
                            Margin="0,0,0,5">

                        <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">

                            <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
                                <Label Text="{Binding Name}" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       TextColor="#111827"/>
                                <HorizontalStackLayout Spacing="5">
                                    <Label Text="{Binding Strength}" TextColor="#6B7280" FontSize="14"/>
                                    <Label Text="â€¢" TextColor="#6B7280"/>
                                    <Label Text="{Binding medicationType}" TextColor="#6B7280" FontSize="14"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                            <Button Grid.Column="1"
                                    Grid.RowSpan="2"
                                    Text="ðŸ—‘ï¸ Ta bort"
                                    TextColor="#DC2626"
                                    BackgroundColor="#FEF2F2"
                                    BorderColor="#FECACA"
                                    BorderWidth="1"
                                    CornerRadius="8"
                                    HeightRequest="44"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    Padding="12,0"
                                    Command="{Binding Source={x:Reference RemovePage}, Path=BindingContext.DeleteMedicationCommand}"
                                    CommandParameter="{Binding MedID}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>